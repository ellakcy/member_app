{% extends "@FOSUser/layout.html.twig" %}

{% set body_css_classes="hold-transition login-page" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %} {{ 'layout.resetpassword.header'|trans }} {% endblock %}

{% block fos_user_content %}
		<div class="login-box">
    		<section class="login-box-body">
    			<div class="login-box-msg">
    				<h4 class="text-center">{{ 'layout.resetpassword.header'|trans }}</h4>	
    			</div>
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST">
                    <div class="form-group">
                      <label for="username">{{ 'resetting.request.username'|trans }}</label>
	                  <input type="text" id="username" class="form-control" name="username" required="required" />             
                    </div>
                    <div class="form-group">                    
                      <input type="submit" class="btn btn-block btn-flat btn-primary" value="{{ 'resetting.request.submit'|trans }}" />
                    </div>
                </form>
			</section>
		</div>
{% endblock fos_user_content %}

{% block javascriptsFooter %}
{% endblock %}
