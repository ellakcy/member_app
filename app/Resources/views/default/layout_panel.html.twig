{% extends 'default/layout_homepage.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ asset('panel.css','css') }}" >
{% endblock %}

{% block navContent %}
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="nav d-md-none navbar-nav">
      <li class="nav-item">
          <a class="nav-link text-light" href="{{ path('fos_user_security_logout') }}"><i class="fa fa-user"></i>&nbsp;&nbsp;Edit Profile</a>
      </li>
    </ul>
    <ul class="nav navbar-nav ml-auto">
        <li class="nav-item">
            <a class="btn btn-danger btn-block" href="{{ path('fos_user_security_logout') }}">Logout</a>
        </li>
    </ul>
</div>
{% endblock navContent %}

{% block content %}
  <div class="sidebar bg-dark text-light">
      {{ render(controller('AppBundle:Sidebar:displayCurrentUserInfoToTheSideBar')) }}
      <hr class="border-light"><br>
      {% block sidebar_content %}
      {% endblock sidebar_content %}
  </div>



  <div class="content">
      {% block pageContent %}
      {% endblock pageContent %}
  </div>
{% endblock %}
