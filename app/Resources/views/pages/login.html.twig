{% extends "default/layout_homepage.html.twig" %}

{% block stylesheets %}
 {{ parent() }}
 <style>
   .custom {
     height: calc(100vh - 60px);
   }
 </style>
{% endblock stylesheets %}

{% block title %}
{% endblock %}

{% block main %}
<main class="custom">
  <div class="custom container d-flex align-items-center justify-content-center">
      <div class="row bg-light border border-primary">
        <div class="col mt-5 col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <h1 style="text-align:center">Login</h1>
          <form action="./index.html" method="post">
                 <div class="form-group">
                  <input type="text" class="form-control"  value="{{last_username}}" id="username" name="_username" placeholder="Username" required="required" />
                  <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="_password" placeholder="password" required="required" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>

                <div class="form-group">
                    <div class="form-check">
                      <input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input" />
                      <label class="form-check-label" for="remember_me" >Remember Me</label>
                    </div>
                </div>
               <div class="form-row">
                 <div class="col">
                   <input type="submit" class="btn btn-success btn-block" id="_submit" name="_submit" value="Submit" />
                 </div>
                 <div class="col">
                   <a class="btn btn-primary btn-block" href="#">Forgot Password</a>
                 </div>
              </div>
          </form>
        </div>
        <div class="col col-xs-12 col-sm-12 col-md-12 col-lg-12 mt-1 mb-5">
            <a class="btn btn-primary btn-block" href="#">I do not have an account</a>
        </div>
      </div>
    </div>
</main>
{% endblock main %}

{% block javascripts %}
{% endblock %}
